<!DOCTYPE html>
<html lang="en">
  <head>
    <title>ToDoCal</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload", media: 'all' %>
    <%= javascript_importmap_tags %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
  </head>

  <body>
    <header class="container">
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <%= link_to "ToDoCal", root_path, class: "navbar-brand"%>
          </div>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li>Welcome <%= current_user.email %>! </li>
              <li><%= link_to 'Account', account_path %> </li>
              <li><%= button_to 'Sign out', logout_path, method: :delete, class: "btn btn-link"%></li>
            <% else %>
              <li><%= link_to 'Sign in', login_path, class: "btn btn-default" %></li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <section class="container">
      <%= yield %>
    </section>
  </body>
</html>
